# Copy this file to .env and fill in your credentials
# .env is gitignored. Keep tokens private and rotate if exposed.

# Required for uploading to PyPI (token from https://pypi.org/manage/account/token/)
TWINE_USERNAME=__token__
TWINE_PASSWORD=pypi-REPLACE_WITH_YOUR_PROD_TOKEN

# Optional: separate credentials for TestPyPI
# If unset, upload-test will fall back to TWINE_USERNAME/TWINE_PASSWORD
TWINE_TEST_USERNAME=__token__
TWINE_TEST_PASSWORD=pypi-REPLACE_WITH_YOUR_TESTPYPI_TOKEN

# Optional: override repository names used by twine
# Defaults are fine in most cases
PYPI_REPOSITORY=pypi
TESTPYPI_REPOSITORY=testpypi
